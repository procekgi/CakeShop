@using CakeShop.Models
@model Pedido
@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3>PAGAMENTO</h3>
            <h6>* Campos obrigatórios</h6>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="@Url.Action("FazerPagto", "Pedido")" class="form-horizontal" method="post">
                @Html.HiddenFor(m => m.Id_Pedido)
                @if (!string.IsNullOrWhiteSpace(ViewBag.ErroMsg))
                {
                    <div class="form-row">
                        <div class="form-group col-md-12 text-center">
                            <div class="alert alert-danger" role="alert" style="margin-bottom: 0px !important;">
                                @ViewBag.ErroMsg
                            </div>
                        </div>
                    </div>
                }
                <div class="form-row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.NumeroCartao, "Número do cartão *", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.NumeroCartao, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.NomeDoTitular, "Nome do Titular *", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.NomeDoTitular, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.DataValidade, "Data de validade *", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.DataValidade, "{0:MM/yyyy}", new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.CodigoVerificacao, "Código de Verificação *", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.CodigoVerificacao, "{0:0000}", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12 text-right">
                        <button type="submit" class="btn btn-danger">
                            Enviar pagamento
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
