@using CakeShop.Models
@model List<Produto>
<div class="row>">
    <div class="col-md-12">
        <h1>Bolos</h1>
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("CadastroProduto")" class="btn btn-danger">Incluir Novo Produto</a>
            </div>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Produto</th>
                        <th>Categoria</th>
                        <th>UDM</th>
                        <th>Preço</th>
                        <th>Descrição</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Produto item in Model)
                    {
                        <tr>
                            <td>@item.Id_Produto</td>
                            <td>@item.Nome_Produto</td>
                            <td>@item.Categoria.Nome_Categoria</td>
                            <td>@item.UnidadeDeMedida.Nome</td>
                            <td>@item.Preco</td>
                            <td>@item.Descricao</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
