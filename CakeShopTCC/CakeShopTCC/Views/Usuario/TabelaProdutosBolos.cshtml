
@using CakeShop.Models
@model List<Produto>

    <div class="row>">
        <div class="col-md-12">
            <h1>Bolos</h1>
            <div class="table-responsive">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Produto</th>
                            <th>Categoria</th>
                            <th>UDM</th>
                            <th>Preço</th>
                            <th>Descrição</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Produto item in Model)
                        {
                            <tr>@item.Id_Produto</tr>
                            <tr>@item.Nome_Produto</tr>
                            <tr>@item.Categoria.Nome_Categoria</tr>
                            <tr>@item.UnidadeDeMedida.Nome</tr>
                            <tr>@item.Preco</tr>
                            <tr>@item.Descricao</tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="@Url.Action("CadastroProduto")" class="btn btn-danger">Incluir Bolo</a>
                </div>
                <div class="col-md-12">
                    <a href="" class="btn btn-danger">Editar</a>
                </div>
                <div class="col-md-12">
                    <a href="" class="btn btn-danger">Excluir</a>
                </div>
            </div>
        </div>
    </div>
