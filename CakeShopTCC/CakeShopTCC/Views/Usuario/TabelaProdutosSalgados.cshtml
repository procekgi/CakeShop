
@using CakeShop.Models
@model List<Produto>

<div class="row>">
    <div class="col-md-12">
        <h1>Salgados</h1>
        <div class="table-responsive">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Produto</th>
                        <th>Categoria</th>
                        <th>UDM</th>
                        <th>Preço</th>
                        <th>Descrição</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Produto item in Model)
                    {
                        <tr>
                            <td>@item.Id_Produto</td>
                            <td>@item.Nome_Produto</td>
                            <td>@item.Categoria.Nome_Categoria</td>
                            <td>@item.UnidadeDeMedida.Nome</td>
                            <td>@item.Preco</td>
                            <td>@item.Descricao</td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-12">
                    <a href="@Url.Action("CadastroProduto", "Produto")" class="btn btn-danger">Incluir Salgado</a>

                    <a href="@Url.Action("CadastroProduto", "TabelaProdutosSalgados")" class="btn btn-danger">Editar</a>
                    <a href="@Url.Action("CadastroProduto", "TabelaProdutosSalgados")" class="btn btn-danger">Excluir</a>

                </div>
            </div>
        </div>
    </div>
</div>
