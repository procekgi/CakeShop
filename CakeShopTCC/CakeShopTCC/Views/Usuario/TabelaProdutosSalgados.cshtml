@using CakeShop.Models
@model List<Produto>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h3>Salgados</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("CadastroProduto", "Produto")" class="btn btn-danger" style="margin-bottom: 20px;">Incluir Salgado</a>
    </div>
</div>
<div class="row>">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Produto</th>
                        <th>Categoria</th>
                        <th>UDM</th>
                        <th>Preço</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Produto item in Model)
                    {
                        <tr>
                            <td>@item.Id_Produto</td>
                            <td>@item.Nome_Produto</td>
                            <td>@item.Categoria.Nome_Categoria</td>
                            <td>@item.UnidadeDeMedida.Nome</td>
                            <td>@string.Format("{0:C2}", item.Preco)</td>
                            <td>
                                <a href="@Url.Action("EditarProduto", "Usuario", new { @id = item.Id_Produto })">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                <a href="@Url.Action("ExcluirSalgado", "Usuario", new { @id = item.Id_Produto })" onclick="if (!confirm('Deseja realmente excluir este produto?')) return false;">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
