@using CakeShop.Models
@model Cliente
    <div class="row">
        <div class="col-lg-6">
            <h2>É Cadastrado?</h2>
           <hr />
        </div>
    </div>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="@Url.Action("Entrar", "Cliente")" class="form-horizontal">
                <div class="form-group">
                    <div class="col-lg-6">
                        @Html.LabelFor(m => m.Login_usuario, "Usuário", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Login_usuario, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6">
                        @Html.LabelFor(m => m.Senha, "Senha", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6 text-left">
                        <button type="submit" class="btn" style="background-color:firebrick;">Entrar</button>
                        <button type="button" class="btn btn-default">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
