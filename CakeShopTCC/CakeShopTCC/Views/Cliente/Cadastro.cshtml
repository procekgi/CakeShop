@using CakeShop.Models
@model Cliente
<div class="row">
    <div class="col-lg-6">
        <h2>É Cadastrado?</h2>
        <hr />
        <form action="@Url.Action("Entrar", "Cliente")" class="form-horizontal">
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Login_usuario, "Usuário", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Login_usuario, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Senha, "Senha", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 text-right">
                    <button type="submit" class="btn btn-danger">Entrar</button>
                    <button type="button" class="btn btn-danger">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <h2>Faça seu cadastro</h2>
        <hr />
        <form action="@Url.Action("Cadastrar", "Cliente")" class="form-horizontal">
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Nome_Cliente, "Nome", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome_Cliente, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.LabelFor(m => m.Email, "Email", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Telefone, "Telefone", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Login_usuario, "Nome de Usuário", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Login_usuario, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Senha, "Senha", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Senha, "Confirmar senha", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 text-right">
                    <button type="submit" class="btn btn-danger">Cadastrar</button>
                    <button type="button" class="btn btn-danger">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>